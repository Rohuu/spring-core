<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"  "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
<bean id="triangle" class="com.rohuu.drawingApp.Triangle">
<property name="pointA" ref="pointA"/>
<property name="pointB" ref="pointB"/>
<property name="pointC" ref="pointC"/>
</bean>


<bean id="pointA" class="com.rohuu.drawingApp.Point">
<!-- adding property placeholder instead of actual values -->
<property name="x" value="${pointA.pointX}"/>
<property name="y" value="${pointA.pointY}"/>
</bean>

<bean id="pointB" class="com.rohuu.drawingApp.Point">
<property name="x" value="-20"/>
<property name="y" value="0"/>
</bean>

<bean id="pointC" class="com.rohuu.drawingApp.Point">
<property name="x" value="20"/>
<property name="y" value="0"/>
</bean>


<!-- spring's bean factory postProcessor -->
<!-- this will look at external properties file, then look at spring.xml then wherever there are place holders , it will substitute those with values in properties file-->
<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
<!-- now xml needs to know the properties file, so configure it -->
<property name="locations" value="pointsConfig.properties"/>
</bean>


</beans>