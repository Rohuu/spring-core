<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"  "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
<bean id="triangle" class="com.rohuu.drawingApp.Triangle">
<!-- here we will give reference of points to triangle class using property tag -->
<!-- first from java class it will look for triangle bean then futher inside triangle bean there are multiple name and references -->
<!-- then it will further dig deeper into it-->
<property name="pointA" ref="firstPoint"/>
<property name="pointB" ref="secondPoint"/>
<property name="pointC" ref="thirdPoint"/>
</bean>

<bean id="firstPoint" class="com.rohuu.drawingApp.Point">
<property name="x" value="0"/>
<property name="y" value="0"/>
</bean>

<bean id="secondPoint" class="com.rohuu.drawingApp.Point">
<property name="x" value="-20"/>
<property name="y" value="0"/>
</bean>

<bean id="thirdPoint" class="com.rohuu.drawingApp.Point">
<property name="x" value="20"/>
<property name="y" value="0"/>
</bean>

</beans>