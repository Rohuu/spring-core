<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"  "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
<bean id="triangle" class="com.rohuu.drawingApp.Triangle" autowire="byName">
<!-- if we give the objects name same as property name then use autowire tag , spring will automatically refer to the properties -->
<!-- then we don't have to write any property tag / dependency inside triangle class bean -->
<!-- like change firstPoint name to pointA ..... and so on for others as well -->
</bean>

<bean id="pointA" class="com.rohuu.drawingApp.Point">
<property name="x" value="0"/>
<property name="y" value="0"/>
</bean>

<bean id="pointB" class="com.rohuu.drawingApp.Point">
<property name="x" value="-20"/>
<property name="y" value="0"/>
</bean>

<bean id="pointC" class="com.rohuu.drawingApp.Point">
<property name="x" value="20"/>
<property name="y" value="0"/>
</bean>

<alias name="triangle" alias="triangle-alias"/>

</beans>