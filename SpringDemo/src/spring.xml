<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"  "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans default-init-method="myInit" default-destroy-method="cleanUp">
<bean id="parentTriangle" class="com.rohuu.drawingApp.Triangle">
<!-- common configuration can be written here in parent bean-->
<property name="pointA" ref="pointA"/>
</bean>

<bean id="triangle1" class="com.rohuu.drawingApp.Triangle" parent="parentTriangle">
<!-- by defining parent tag , it takes all properties from parent bean and include in itself-->
<property name="pointB" ref="pointB"/>
<property name="pointC" ref="pointC"/>
</bean>

<bean id="triangle2" class="com.rohuu.drawingApp.Triangle" parent="parentTriangle">
<property name="pointB" ref="pointB"/>
</bean>

<bean id="pointA" class="com.rohuu.drawingApp.Point">
<property name="x" value="0"/>
<property name="y" value="0"/>
</bean>

<bean id="pointB" class="com.rohuu.drawingApp.Point">
<property name="x" value="-20"/>
<property name="y" value="0"/>
</bean>

<bean id="pointC" class="com.rohuu.drawingApp.Point">
<property name="x" value="20"/>
<property name="y" value="0"/>
</bean>

</beans>